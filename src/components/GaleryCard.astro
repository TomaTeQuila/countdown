---
interface Props {
	title: string;
	author: string;
    link: string;

}

const {title, author, link } = Astro.props;
---
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="card-body">
                <div class="card-img">
                    <img src={link} alt="">
                </div>
                <div class="card-img-desc">
                    <p>{author}</p>
                </div>
            </div>
        </div>
    </div>
</div>

